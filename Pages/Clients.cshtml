@page
@using CRM.Models
@model CRM.Pages.Clients
@{
    ViewData["Title"] = "Clients";
}

<div class="d-flex justify-content-between">
<h1>@ViewData["Title"]</h1>

</div>
<div class="d-flex justify-content-end">
    <a asp-page="/AddNewClient"><button type="button" class="btn btn-dark">Add New Client</button></a>
</div>
<div class="mt-3">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Action</th>        
        </tr>

        @foreach(var client in Model.ClientList)
        {
            <tr>
                <td>@client.Id</td>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Email</td>
                <td>@client.Phone</td>
                <td><button utton type="button" class="btn btn-dark btn-sm">Edit</button></td>
            </tr>
        }
    </table>
</div>
