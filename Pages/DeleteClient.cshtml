@page
@model CRM.Pages.DeleteClient
@{
    ViewData["Title"] = "DeleteClient";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this client?</h3>

<div>
    <div>Name: @Html.DisplayFor(model => model.Clients.FirstName) @Html.DisplayFor(model => model.Clients.LastName)</div>
    <div>ID: @Html.DisplayFor(model => model.Clients.Id) </div>
</div>

<div class="mt-5">
        <form method="post">
        <input type="hidden" asp-for="Clients.Id" />
        <a asp-page="./Clients" class="btn btn-primary">Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
</div>